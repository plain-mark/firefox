{
  "manifest_version": 2,
  "name": "Code Block Extractor",
  "version": "1.2",
  "description": "Extracts code blocks from various platforms",
  "browser_specific_settings": {
    "gecko": {
      "id": "code-block-extractor@plainmark.com",
      "strict_min_version": "57.0"
    }
  },
  "permissions": [
    "activeTab",
    "http://localhost:5000/*",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.githubusercontent.com/*",
      "*://*.github.com/*",
      "*://*.discord.com/*",
      "*://claude.ai/*",
      "*://*.claude.ai/*",
      "*://*.chat.openai.com/*",
      "*://*.stackoverflow.com/*",
      "*://*.stackexchange.com/*",
      "*://*.reddit.com/*",
      "*://*.gitter.im/*",
      "*://*.slack.com/*",
      "*://*.teams.microsoft.com/*",
      "*://*.gitlab.com/*",
      "*://*.bitbucket.org/*",
      "*://*.notion.so/*",
      "*://*.obsidian.md/*",
      "*://jupyter.org/*",
      "*://*.kaggle.com/*",
      "*://*.colab.google.com/*",
      "*://codepen.io/*",
      "*://jsfiddle.net/*",
      "*://*.replit.com/*",
      "*://*.hashnode.com/*",
      "*://*.dev.to/*",
      "*://*.medium.com/*",
      "*://localhost/*"
    ],
    "js": ["content.js"],
    "run_at": "document_end",
    "all_frames": false
  }],
  "content_security_policy": "script-src 'self' https://github.githubassets.com; object-src 'self'; connect-src 'self' http://localhost:5000/ https://github.githubassets.com http://* https://*",
  "web_accessible_resources": [
    "content.js"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
